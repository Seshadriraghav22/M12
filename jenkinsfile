pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'war', url: 'https://github.com/Seshadriraghav22/M12.git'
            }
        }
        stage('Build Project') {
            steps {
                sh 'mvn clean'
                sh 'mvn install'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    app = docker.build("seshadriraghav22/may19")
                    // Run a test command inside the Docker container
                    app.inside {
                        sh 'curl -f http://localhost:8080 || echo "Service not available"'
                    }
                }
            }
        }
        stage('Deploy to Server') {
            steps {
                script {
                    // Ensure to stop and remove any existing container
                    sh '''
                    if [ "$(docker ps -q -f name=demo-deploy)" ]; then
                        docker stop demo-deploy
                        docker rm demo-deploy
                    fi
                    '''
                    // Run the new container
                    sh "docker run --restart always --name demo-deploy -p 8080:8080 -d seshadriraghav22/may19"
                }
            }
        }
    }
}
